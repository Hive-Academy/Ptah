{
  "name": "ptah-claude-code",
  "displayName": "Ptah - Claude Code GUI",
  "description": "Complete visual interface for Claude Code CLI with chat, command building, and intelligent context management",
  "version": "0.1.0",
  "publisher": "ptah-extensions",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hive-Academy/Ptah.git"
  },
  "bugs": {
    "url": "https://github.com/Hive-Academy/Ptah/issues"
  },
  "homepage": "https://github.com/Hive-Academy/Ptah#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Chat",
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "chat",
    "code-review",
    "assistant",
    "anthropic",
    "cli-gui"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "images/ptah-icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ptah",
          "title": "Ptah - Claude Code",
          "icon": "images/ptah-icon.png"
        }
      ]
    },
    "views": {
      "ptah": [
        {
          "type": "webview",
          "id": "ptah.main",
          "name": "Claude Code Assistant",
          "icon": "$(robot)",
          "contextualTitle": "Ptah - Claude Code Assistant"
        }
      ]
    },
    "commands": [
      {
        "command": "ptah.quickChat",
        "title": "Quick Chat",
        "category": "Ptah",
        "icon": "$(comment)"
      },
      {
        "command": "ptah.reviewCurrentFile",
        "title": "Review Current File",
        "category": "Ptah",
        "icon": "$(file-code)"
      },
      {
        "command": "ptah.generateTests",
        "title": "Generate Tests",
        "category": "Ptah",
        "icon": "$(beaker)"
      },
      {
        "command": "ptah.buildCommand",
        "title": "Build Command",
        "category": "Ptah",
        "icon": "$(terminal)"
      },
      {
        "command": "ptah.newSession",
        "title": "New Session",
        "category": "Ptah",
        "icon": "$(add)"
      },
      {
        "command": "ptah.includeFile",
        "title": "Include in Context",
        "category": "Ptah",
        "icon": "$(add)"
      },
      {
        "command": "ptah.excludeFile",
        "title": "Exclude from Context",
        "category": "Ptah",
        "icon": "$(remove)"
      },
      {
        "command": "ptah.showAnalytics",
        "title": "Show Analytics",
        "category": "Ptah",
        "icon": "$(graph)"
      },
      {
        "command": "ptah.openFullPanel",
        "title": "Open Full Ptah Panel",
        "category": "Ptah",
        "icon": "$(split-horizontal)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ptah.quickChat"
        },
        {
          "command": "ptah.reviewCurrentFile",
          "when": "editorIsOpen"
        },
        {
          "command": "ptah.generateTests",
          "when": "editorIsOpen"
        }
      ],
      "editor/context": [
        {
          "command": "ptah.reviewCurrentFile",
          "group": "ptah@1"
        },
        {
          "command": "ptah.generateTests",
          "group": "ptah@2"
        }
      ],
      "explorer/context": [
        {
          "command": "ptah.includeFile",
          "when": "!ptah.fileIncluded",
          "group": "ptah@1"
        },
        {
          "command": "ptah.excludeFile",
          "when": "ptah.fileIncluded",
          "group": "ptah@1"
        }
      ],
      "view/title": [
        {
          "command": "ptah.newSession",
          "when": "view == ptah.main",
          "group": "navigation"
        },
        {
          "command": "ptah.showAnalytics",
          "when": "view == ptah.main",
          "group": "navigation"
        },
        {
          "command": "ptah.openFullPanel",
          "when": "view == ptah.main",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ptah.quickChat",
        "key": "ctrl+shift+p ctrl+shift+c",
        "mac": "cmd+shift+p cmd+shift+c"
      },
      {
        "command": "ptah.reviewCurrentFile",
        "key": "ctrl+shift+p ctrl+shift+r",
        "mac": "cmd+shift+p cmd+shift+r",
        "when": "editorIsOpen"
      },
      {
        "command": "ptah.buildCommand",
        "key": "ctrl+shift+p ctrl+shift+b",
        "mac": "cmd+shift+p cmd+shift+b"
      }
    ],
    "configuration": {
      "title": "Ptah - Claude Code",
      "properties": {
        "ptah.claudeCliPath": {
          "type": "string",
          "default": "claude",
          "description": "Path to Claude Code CLI executable"
        },
        "ptah.defaultProvider": {
          "type": "string",
          "enum": [
            "anthropic",
            "bedrock",
            "vertex"
          ],
          "default": "anthropic",
          "description": "Default Claude provider"
        },
        "ptah.maxTokens": {
          "type": "number",
          "default": 200000,
          "description": "Maximum tokens per session"
        },
        "ptah.autoIncludeOpenFiles": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include open files in context"
        },
        "ptah.contextOptimization": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic context optimization suggestions"
        },
        "ptah.analyticsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable usage analytics tracking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "compile:test": "tsc -p ./tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "watch:test": "tsc -watch -p ./tsconfig.test.json",
    "pretest": "npm run compile && npm run compile:test && npm run lint",
    "lint": "eslint . --ext .ts,.html --fix",
    "lint:check": "eslint . --ext .ts,.html",
    "format": "prettier --write \"**/*.{ts,js,json,html,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css,scss,md}\"",
    "prepare": "husky install",
    "test": "node ./out/test/runTest.js",
    "test:standalone": "npm run compile:test && node ./out/test-detection.js",
    
    "build:webview": "cd webview/ptah-webview && npm run build:webview",
    "build:webview:prod": "cd webview/ptah-webview && npm run build:prod",
    "dev:webview": "cd webview/ptah-webview && npm run watch:webview",
    "install:webview": "cd webview/ptah-webview && npm install",
    "build:all": "npm run compile && npm run build:webview",
    
    "lint:webview": "cd webview/ptah-webview && npm run lint",
    "lint:webview:fix": "cd webview/ptah-webview && npm run lint:fix",
    "typecheck:webview": "cd webview/ptah-webview && npm run typecheck",
    "test:webview": "cd webview/ptah-webview && npm run test",
    "test:webview:coverage": "cd webview/ptah-webview && npm run test:coverage",
    
    "dev:all": "concurrently \"npm run watch\" \"npm run dev:webview\"",
    "lint:all": "npm run lint && npm run lint:webview",
    "typecheck:all": "npm run compile && npm run typecheck:webview",
    "test:all": "npm run test && npm run test:webview"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^17.3.0",
    "@angular-eslint/eslint-plugin": "^17.3.0",
    "@angular-eslint/eslint-plugin-template": "^17.3.0",
    "@angular-eslint/template-parser": "^17.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "lint-staged": "^15.2.2",
    "husky": "^9.0.11",
    "mocha": "^11.7.1",
    "concurrently": "^8.2.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
