{
  "servers": {
    "angular-cli": {
      "command": "cmd.exe",
      "args": ["/c", "npx", "-y", "@angular/cli", "mcp"]
    },

    "browser": {
      "command": "cmd.exe",
      "args": ["/c", "npx", "-y", "@agent-infra/mcp-server-browser@latest"]
    },

    "sequential-thinking": {
      "command": "cmd.exe",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },

    "filesystem": {
      "command": "cmd.exe",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "D:\\projects"
      ]
    },

    "anubis": {
      "command": "npx",
      "args": ["-y", "@hive-academy/anubis@latest"],
      "env": {
        "PROJECT_ROOT": "D://projects/ptah"
      }
    }
  }
}
